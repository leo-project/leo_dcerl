{minimum_otp_vsn, "22"}.

{erl_opts, [
    debug_info,
    warn_unused_import,
    warn_shadow_vars,
    warn_export_vars,
    warn_export_all
]}.

{xref_checks, [undefined_function_calls, undefined_functions]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.

{profiles, [
    {test, [
        {erl_opts, [debug_info, nowarn_export_all]},
        {deps, []}
    ]}
]}.

{plugins, [pc]}.

{artifacts, ["priv/lru.so"]}.

{pre_hooks, [
    {"(linux|darwin|solaris)", compile, "sh -c 'cd c_src && ./build_deps.sh'"},
    {"(freebsd|netbsd|openbsd)", compile, "sh -c 'cd c_src && ./build_deps.sh'"}
]}.

{post_hooks, [
    {"(linux|darwin|solaris)", clean, "sh -c 'cd c_src && ./build_deps.sh clean'"},
    {"(freebsd|netbsd|openbsd)", clean, "sh -c 'cd c_src && ./build_deps.sh clean'"}
]}.

{port_specs, [
    {"priv/lru.so", ["c_src/*.c"]}
]}.

{port_env, [
    {"CFLAGS", "$CFLAGS -fPIC -g -O2 -Ic_src/libcutil/src"},
    {"DRV_CFLAGS", "$DRV_CFLAGS -O2 -Wall -Ic_src/libcutil/src"},
    {"DRV_LDFLAGS", "$DRV_LDFLAGS c_src/libcutil/build/src/libcutil.a"}
]}.

{provider_hooks, [
    {post, [
        {compile, {pc, compile}},
        {clean, {pc, clean}}
    ]}
]}.
